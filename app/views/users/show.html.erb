<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<br />
<br />
<h2>Liste des événements créés par  <%= @user.name %> :</h2>
<br />
<br>
<table class="table table-striped table-hover">
    <tr>
        <th>Non</th>
        <th>Description</th>
        <th>Date</th>
        <th>Places</th>
        
    </tr>
    <% current_user.authored_events.each do |event|%>
      <tr>

        <td> <%= event.name %> </td>
        <td> <%= event.description %> </td>
        <td> <%= event.date.strftime("%d/%m/%Y ") unless event.date.nil? %>  </td>
        <td> <%= event.place %> </td>
        <td> <%= button_to "Voir", event, method: :get, class:"btn btn-sm btn-primary" %> </td>
        <td> <%= button_to "Supprimer", event, method: :delete, class:"btn btn-sm btn-danger", data: {confirm: 'Voulez-vous supprimer cet événement?' } %></td>
      
      </tr>
    <% end %>
</table>
</div>
<br />
 <p>
   <%= link_to "Créer un nouvel événement", new_event_path %>
 </p>

